<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/covid.css" />
    <link rel="stylesheet" href="~/css/food.css" />
    <link rel="stylesheet" href="~/css/music.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand border-right text-left" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <div class="dropdown">
                                <a href="#" class="nav-link text-light dropdown-toggle" data-toggle="dropdown">Music Tools</a>
                                <div class="dropdown-menu bg-dark text-light">
                                    <a class="nav-link dropdown-item" asp-page="/ScaleCalculator/ScaleCalculator">Scale Calculator</a>
                                    <a class="nav-link dropdown-item" asp-page="/MusicScales/List">Scales</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a href="#" class="nav-link text-light dropdown-toggle" data-toggle="dropdown">Cooking Tools</a>
                                <div class="dropdown-menu bg-dark text-light">
                                    <a class="nav-link dropdown-item" asp-page="/Food/Ingredients">Ingredients</a>
                                    <a class="nav-link dropdown-item" asp-page="/Food/Recipes">Recipes</a>
                                    <a class="nav-link dropdown-item" asp-page="/Food/AddIngredient">Add Ingredients</a>
                                    <a class="nav-link dropdown-item" asp-page="/Food/RecipeWriter">Add Recipe</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a href="#" class="nav-link text-light dropdown-toggle" data-toggle="dropdown">Covid-19 Statistics</a>
                                <div class="dropdown-menu bg-dark text-light">
                                    <a class="nav-link dropdown-item" asp-page="/Covid/List">Countries</a>
                                    <a class="nav-link dropdown-item" asp-page="/Covid/InternationalStatistics">International Statistics</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="container">
            &copy; 2021 - Quaverflow
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/food.js" asp-append-version="true"></script>
    <script src="~/js/covid.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
