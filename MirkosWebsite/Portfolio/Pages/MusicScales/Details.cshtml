@page "{scaleId:int}"
@model Portfolio.Pages.MusicScales.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="image-music-details full-width">
    <div class="layer vcenter-item">
        <div class="col-md-12 row text-center text-light">
            <div class="col-md-12 text-light">
                <h2 class="display-4"> @Model.Scale.Name</h2>
            </div>
        </div>
    </div>
</div>


<div class="mt-3">
    @if (Model.Message != null)
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <hr class="muted" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                Modes
            </div>
            <div class="col-md-3">
                Intervals
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <hr class="muted" />
            </div>
        </div>
        @for (var i = 0; i < Model.Modes.Count; i++)
        {
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    @Model.Modes[i].Name
                </div>
                <div class="col-md-3 serif">
                    @Model.ScaleInRomanNum[i]
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <hr class="muted" />
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <a class="btn text-danger btn-sm"
               asp-page="./Delete" asp-route-scaleId="@Model.Modes[0].ScaleId">
                <i class="fas fa-trash"></i>
            </a>
            <a asp-page="./List" class="btn btn-primary btn-sm">Back to Scales</a>
        </div>
    </div>
</div>
