@page
@model Portfolio.Pages.MusicScales.MusicScalesListModel
@{
    ViewData["Title"] = "List";
}

<div class="image-music-list full-width">
    <div class="layer vcenter-item">
        <div class="col-md-12 row text-center text-light">
            <div class="col-md-12 text-light">
                <h2 class="display-4">MUSIC SCALES</h2>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">

    @if (Model.Message != null)
    {
        <div class="alert alert-info">@Model.Message</div>
    }
    <form method="get">
        <div class="row">
            <div class="col-md-2">
            </div><div class="col-md-8">
                <div class="form-group ">
                    <div class="input-group">
                        <input type="search" class="form-control" asp-for="SearchScale" />
                        <span class="input-group-btn">
                            <button class="btn btn-dark">
                                Search
                                <i class="fas fa-search"> </i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Scales.Any())
    {
        <div>
            <div class="col-md-2">
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-2">
                    <h4>Scale</h4>
                </div>
                <div class="col-md-2">
                    <h4>Created by</h4>
                </div>
                <div class="col-md-4">
                    <h4>Intervals</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <hr class="muted" />
                </div>
            </div>
            @for (var i = 0; i < Model.Scales.Count(); i++)
            {
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-2">
                        @Model.Scales[i].Name
                    </div>
                    <div class="col-md-2">
                        @Model.Scales[i].CreatedBy
                    </div>
                    <div class="col-md-3 serif">
                        @Model.ScaleInRomanNum[i]
                    </div>
                    <div class="col-md-1 text-right">
                        <a class="btn text-info btn-sm" data-toggle="tooltip" title="Details"
                           asp-page="./Details" asp-route-scaleId="@Model.Scales[i].Id">
                            <i class="fas fa-search-plus"></i>
                        </a>
                        <a class="btn text-danger btn-sm" data-toggle="tooltip" title="Delete"
                           asp-page="./Delete" asp-route-scaleId="@Model.Scales[i].Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">
                        <hr class="muted" />
                    </div>
                </div>
            }
            <div class="row">

                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <a asp-page="./AddNewScale" class="btn btn-success btn-sm">Add New</a>
                </div>
            </div>
        </div>

    }
    else
    {
        <h2>
            Seems like there aren't any matches for your search!
        </h2>
        <a asp-page="./AddNewScale" class="btn btn-success">Add New</a>
        <a asp-page="./List" class="btn btn-primary">Back to Scales</a>
    }

</div>
