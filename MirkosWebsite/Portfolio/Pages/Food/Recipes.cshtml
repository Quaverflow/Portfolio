@page
@model Portfolio.Pages.Food.RecipesModel
@{
    ViewData["Title"] = "Recipes";
}

<div class="image-recipes full-width">
    <div class="layer vcenter-item">
        <div class="col-md-12 row text-center text-light">
            <div class="col-md-12 text-light">
                <h2 class="display-4">EXPLORE DELICIOUS RECIPES CREATED BY OUR USERS</h2>
            </div>
        </div>
    </div>
</div>


<div class="mt-3">
    @if (Model.Message != null)
    {
        <div class="alert alert-info">@Model.Message</div>
    }
    <form method="get">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group  ml-0">
                    <div class="input-group">
                        <input type="search" class="form-control" asp-for="SearchRecipe" />
                        <span class="input-group-btn">
                            <button class="btn btn-dark">
                                Search
                                <i class="fas fa-search"> </i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div>
        @foreach (var r in Model.Recipes)
        {
            <div class="p-2">
                <div class="row text-center">
                    <div class="col-md-3 ">
                    </div>
                    <div class="col-md-6 h3">
                        @r.Name (@r.CreatedBy)
                    </div>
                </div>
                    <hr class="muted" />
                </div>
                    @if (!string.IsNullOrWhiteSpace(r.Video))
                    {
                        <div class="col-md-12 text-center">
                            <object class="recipe-video " data="@r.Video" ></object>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-12 text-center">
                            <img class="img-fluid" src="~/image/food/RecipeVideoAlt.jpg" height="432" width="768">
                        </div>
                    }

            <div class="row mt-2">
                <div class="col-md-12 text-center">
                    <a asp-page="./Recipe" asp-route-recipeId="@r.Id" class="btn btn-primary">Go to recipe</a>
                </div>
            </div>
            <hr class="muted" />
        }
    </div>
</div>