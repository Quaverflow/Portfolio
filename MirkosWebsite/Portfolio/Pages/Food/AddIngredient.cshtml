@page
@model Portfolio.Pages.Food.AddIngredientModel
@{
    ViewData["Title"] = "Add Ingredient";
}

<div class="image-add-ingredients full-width">
    <div class="layer  vcenter-item">
        <div class="col-md-12 row text-center text-light">
            <div class="col-md-12 text-light">
                <h2 class="display-4">ADD AN INGREDIENT TO THE DATABASE</h2>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <h2> Add an ingredient to the database</h2>
    <form method="post">
        <div class="row">
            <div class="col-md-3">
                <label asp-for="NewIngredient.Name"></label>
                <input asp-for="NewIngredient.Name" class="form-control" />
                <span class="text-danger small" asp-validation-for="NewIngredient.Name"></span>
            </div>
            <div class="col-md-3">
                <label>Scientific Name</label>
                <input asp-for="NewIngredient.ScientificName" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Group</label>
                <select asp-for="NewIngredient.IngredientGroup.Id" class="selectpicker form-control" data-live-search="true">
                    @foreach (var group in Model.Groups)
                    {
                        <option value="@group.Id">@group.Group</option>
                    }
                </select>
                <span class="text-danger small" asp-validation-for="NewIngredient.IngredientGroup"></span>
            </div>
            <div class="col-md-3">
                <label>SubGroup</label>
                <select asp-for="NewIngredient.IngredientSubGroup.Id" class="selectpicker form-control" data-live-search="true">
                    @foreach (var subGroup in Model.SubGroups)
                    {
                        <option value="@subGroup.Id">@subGroup.SubGroup</option>
                    }
                    <span class="text-danger small" asp-validation-for="NewIngredient.IngredientSubGroup"></span>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Description</label>
                <textarea asp-for="NewIngredient.Description" class="form-control rounded-0" rows="10"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <button type="submit" class="mt-3 btn btn-primary">Add Ingredient</button>
            </div>
        </div>
    </form>
</div>
